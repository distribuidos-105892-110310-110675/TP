// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3.13-Slim",
	// Use a Docker Compose file instead of a single container image.
	"dockerComposeFile": "docker-compose-dev.yaml",
	// Name of the service container to connect to.
	"service": "devcontainer",
	// Set the workspace folder inside the container.
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	// Forward ports from inside the container.
	"forwardPorts": [
		5672,
		15672
	],
	// Run commands after the container is started.
	"postStartCommand": "pip3 install --no-cache-dir --upgrade -r .devcontainer/requirements.txt",
	// Add custom VS Code extensions.
	"customizations": {
		"vscode": {
			"settings": {
				"mypy-type-checker.cwd": "${workspaceFolder}",
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter"
				},
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.organizeImports": "always"
				},
				"python.analysis.typeCheckingMode": "standard",
				"python.analysis.extraPaths": [
					"./src"
				]
			},
			"extensions": [
				"ms-python.mypy-type-checker",
				"ms-python.isort",
				"ms-python.black-formatter",
				"ms-azuretools.vscode-docker",
				"docker.docker",
				"eamodio.gitlens",
				"dbaeumer.vscode-eslint"
			]
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}